<% provide(:title, "Institutos") %>
<div class="box box-primary box-solid">
  <div class="box-header with-border text-center">
    <div class="box-title">
      <h1>Lista de Institutos</h1> <h5><%= @institutes.count %> Instituto(s)</h5>
    </div>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
    </div><!-- /.box-tools -->
  </div><!-- /.box-header -->
  <div class="box-body">
    <div>
      <button class="btn btn-info btn-lg btn-block" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <i class="fa fa-plus"> Adicionar Instituto</i>
      </button>
      <div class="collapse" id="collapseExample">
        <div class="well">
        <%= render 'form' %>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Imágem</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @institutes.each do |institute| %>
            <tr>
              <td><%= institute.name %></td>
              <td><%= institute.description %></td>
              <td><%= institute.image %></td>
              <td>
                <div class="btn-group">
                  <%= link_to institute, class: "btn btn-success", title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'left' do %>
                    <i class="fa fa-eye fa-lg"></i>
                  <% end %>
                  <%= link_to edit_institute_path(institute), class: "btn btn-warning", title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                    <i class="fa fa-exclamation-triangle fa-lg"></i>
                  <% end %>
                  <%= link_to institute, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir este instituto permanentemente?' }, class: "btn btn-danger", title: 'Excluir', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                    <i class="fa fa-times fa-lg"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div><!-- /.box-body -->
</div><!-- /.box -->

<%= link_to 'New Institute', new_institute_path %>
